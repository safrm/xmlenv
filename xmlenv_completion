# xmlenv completion                                        -*- shell-script -*-

_xmlenv ()
{
    local cur prev words cword
    _init_completion || return

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '-h -f -or -ox -od -b -v -dd -ec -c
            --help --full --output-report --output-xml --output-descriptions --base --verbose --dont-dump --exitcode --comment' -- "$cur" ) )
    else
        case "$prev" in
           show) 
               COMPREPLY=( $( compgen -W "all pkglist pkgver env hw sys pkgcount" -- $cur ) ) 
               ;;
           check) 
               COMPREPLY=( $( compgen -W "pkglist pkgver env" -- $cur ) ) 
               ;;
           dump|backup) 
               COMPREPLY=( $( compgen -W "all pkglist pkgver env hw sys pkgdescr" -- $cur ) ) 
               ;;
           compare) 
               COMPREPLY=( $( compgen -W "-f -or -ox -od -b -dd -ec --full --output-report --output-xml --output-descriptions --base --dont-dump --exitcode " -- $cur ) ) 
               ;;
           #no command given yet
           *)
               COMPREPLY=( $( compgen -W 'help show dump backup compare check' -- "$cur" ) )
               return 0
               ;;
        esac
        
    fi

} &&
complete -F _xmlenv -o dirnames -o filenames xmlenv 

# ex: ts=4 sw=4 et filetype=sh
